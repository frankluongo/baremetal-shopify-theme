{
  "name": "baremetal-shopify-theme",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "deploy": "npm run webpack:build && cd dist && npm run shopify:deploy",
    "dev": "rm -rf dist/assets && mkdir dist/assets && concurrently \"npm run shopify:watch\" \"npm run webpack:watch\" \"npm run shopify:open\"",
    "shopify:deploy": "cd dist && theme deploy --env=production --allow-live",
    "shopify:watch": "cd dist && theme watch --notify=/tmp/theme.update --env=development",
    "shopify:open": "cd dist && theme open --env=development",
    "webpack:build": "webpack --env production",
    "webpack:watch": "webpack --watch --env development"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.12.0",
    "@babel/preset-env": "^7.12.0",
    "@babel/runtime": "^7.12.0",
    "@fullhuman/postcss-purgecss": "^3.0.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "browser-sync": "^2.26.13",
    "browser-sync-webpack-plugin": "^2.2.2",
    "concurrently": "^5.3.0",
    "copy-webpack-plugin": "^6.2.1",
    "css-loader": "^5.0.0",
    "cssnano": "^4.1.10",
    "file-loader": "^6.1.1",
    "image-webpack-loader": "^7.0.1",
    "mini-css-extract-plugin": "^1.0.0",
    "postcss-import": "^12.0.1",
    "postcss-load-config": "^3.0.0",
    "postcss-loader": "^4.0.4",
    "postcss-plugin": "^1.0.0",
    "postcss-preset-env": "^6.7.0",
    "postcss-scss": "^3.0.2",
    "sass": "^1.27.0",
    "sass-loader": "^10.0.3",
    "style-loader": "^2.0.0",
    "url": "^0.11.0",
    "webpack": "^5.1.2",
    "webpack-cli": "^4.0.0"
  },
  "dependencies": {
    "@shopify/theme-addresses": "^4.0.2",
    "easy-instagram-feed": "^2.0.4",
    "lodash": "^4.17.20",
    "qrcode": "^1.4.4",
    "regenerator-runtime": "^0.13.7",
    "waait": "^1.0.5"
  }
}
