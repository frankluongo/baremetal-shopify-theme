<section class="container--slim">
  <header class="p-top-3">
    <h1>Reset Your Password</h1>
    <hr class="m-top-2">
  </header>
  <div class="p-bottom-6 p-top-3">
    {% form 'reset_customer_password', class: 'form' %}
      {{ form.errors | default_errors }}
      <div class="form__block">
        <label class="form__label" for="password">Password</label>
        <input class="form__input" type="password" value="" name="customer[password]" size="16" />
      </div>
      <div class="form__block">
        <label class="form__label" for="password_confirmation">Password Confirmation</label>
        <input
          class="form__input"
          type="password"
          value=""
          name="customer[password_confirmation]"
          size="16"
        />
      </div>
      <div class="form__block">
        <input class="form__submit" type="submit" value="Reset Password" />
      </div>
    {% endform %}
  </div>
</section>
