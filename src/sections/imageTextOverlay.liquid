<div
  class="image-text__image {% if section.settings.useBgOverlay %} image-text__image--overlay {% endif %}"
  data-lazy-bg
  data-src="{{ section.settings.image | img_url: '1920x', format: 'pjpg'  }}">
</div>
<section class="image-text__container container">
    <div class="image-text__text">
      <h2 class="image-text-text__heading">{{ section.settings.heading }}</h2>
      <div class="image-text-text__copy">
        {{ section.settings.text }}
      </div>
      {% if section.settings.showButton %}
      <a class="button" href="{{ section.settings.link }}">
        {{ section.settings.buttonText }}
      </a>
      {% endif %}
    </div>
  </div>
</section>

{% style %}
.image-text {
  --background-color: var(--{{ section.settings.bgColor }});
  --text-size: {{ section.settings.textSize }}em;
  --opacity: {{ section.settings.bgOpacity }};
}

.custom-content-section#shopify-section-{{ section.id }} {
  --padding-bottom: {{ section.settings.paddingBottom }}rem;
  --padding-top: {{ section.settings.paddingTop }}rem;
  --text-color: var(--{{ section.settings.textColor }});
}
{% endstyle %}

{% schema %}
{
  "name": "Image + Text",
  "tag": "section",
  "class": "image-text custom-content-section",
  "settings": [
    {
      "type": "header",
      "content": "Appearance"
    },
    {
      "type": "number",
      "id": "paddingTop",
      "label": "Top Padding",
      "default": 3
    },
    {
      "type": "number",
      "id": "paddingBottom",
      "label": "Bottom Padding",
      "default": 3
    },
    {
      "type": "checkbox",
      "id": "useBgOverlay",
      "label": "Use Background Overlay?",
      "default": true
    },
    {
      "type": "select",
      "id": "bgColor",
      "label": "Background Color",
      "options": [
        { "value": "color-primary", "label": "Primary Brand Color" },
        { "value": "color-secondary", "label": "Secondary Brand Color" },
        { "value": "color-tertiary", "label": "Tertiary Brand Color" },
        { "value": "color-white", "label": "White" },
        { "value": "color-gray-light", "label": "Light Gray" },
        { "value": "color-gray-medium", "label": "Medium Gray" },
        { "value": "color-gray-dark", "label": "Dark Gray" },
        { "value": "color-black", "label": "Black" }
      ],
      "default": "color-white"
    },
    {
      "type": "text",
      "id": "bgOpacity",
      "label": "Background Color Opacity",
      "default": "0"
    },
    {
      "type": "select",
      "id": "textColor",
      "label": "Text Color",
      "options": [
        { "value": "color-primary", "label": "Primary Brand Color" },
        { "value": "color-secondary", "label": "Secondary Brand Color" },
        { "value": "color-tertiary", "label": "Tertiary Brand Color" },
        { "value": "color-white", "label": "White" },
        { "value": "color-gray-light", "label": "Light Gray" },
        { "value": "color-gray-medium", "label": "Medium Gray" },
        { "value": "color-gray-dark", "label": "Dark Gray" },
        { "value": "color-black", "label": "Black" }
      ],
      "default": "color-black"
    },
    {
      "type": "header",
      "content": "Settings"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Pair large text with an image to give focus to your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>"
    },
    {
      "type": "text",
      "id": "textSize",
      "label": "Text Size Ratio",
      "default": "1"
    },
    {
      "type": "checkbox",
      "id": "showButton",
      "label": "Show Button?",
      "default": false
    },
    {
      "type": "text",
      "id": "buttonText",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link",
      "info": "Optional Link"
    }
  ],
  "presets": [
    {
      "name": "Image + Text",
      "category": "Image"
    }
  ]
}
{% endschema %}
