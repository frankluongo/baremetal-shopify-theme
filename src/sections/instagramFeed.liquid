<div
  class="instagram-feed__container container"
  data-feed-wrapper
  data-posts="{{ section.settings.noOfPosts }}"
  data-brand-url="{{ section.settings.instagramUrl }}"
  data-feed-url="{{ section.settings.feedUrl }}"
  data-name="{{ shop.name }}"
>
  <header class="instagram-feed__header">
    <h2 class="instagram-feed__heading">{{ section.settings.heading }}</h2>
    {% if section.settings.subheading != blank %}
      <p class="instagram-feed__subheading">{{ section.settings.subheading }}</p>
    {% endif %}
  </header>
  <section class="instagram-feed__feed">
    <div class="instagram-feed__items" data-instagram-feed></div>
  </section>
</div>

{% style %}
.custom-content-section#shopify-section-{{ section.id }} {
  --padding-bottom: {{ section.settings.paddingBottom }}rem;
  --padding-top: {{ section.settings.paddingTop }}rem;
  --background-color: var(--{{ section.settings.bgColor }});
  --text-color: var(--{{ section.settings.textColor }});
}
{% endstyle %}

{% schema %}
{
  "name": "Instagram Feed",
  "tag": "section",
  "class": "instagram-feed custom-content-section",
  "settings": [
    {
      "type": "header",
      "content": "Appearance"
    },
    {
			"type": "number",
      "id": "paddingTop",
			"label": "Top Padding",
			"default": 3
		},
		{
			"type": "number",
			"id": "paddingBottom",
			"label": "Bottom Padding",
			"default": 3
		},
    {
      "type": "select",
      "id": "bgColor",
      "label": "Background Color",
      "options": [
        { "value": "color-primary", "label": "Primary Brand Color" },
        { "value": "color-secondary", "label": "Secondary Brand Color" },
        { "value": "color-tertiary", "label": "Tertiary Brand Color" },
        { "value": "color-white", "label": "White" },
        { "value": "color-gray-light", "label": "Light Gray" },
        { "value": "color-gray-medium", "label": "Medium Gray" },
        { "value": "color-gray-dark", "label": "Dark Gray" },
        { "value": "color-black", "label": "Black" }
      ],
      "default": "color-white"
    },
    {
      "type": "select",
      "id": "textColor",
      "label": "Text Color",
      "options": [
        { "value": "color-primary", "label": "Primary Brand Color" },
        { "value": "color-secondary", "label": "Secondary Brand Color" },
        { "value": "color-tertiary", "label": "Tertiary Brand Color" },
        { "value": "color-white", "label": "White" },
        { "value": "color-gray-light", "label": "Light Gray" },
        { "value": "color-gray-medium", "label": "Medium Gray" },
        { "value": "color-gray-dark", "label": "Dark Gray" },
        { "value": "color-black", "label": "Black" }
      ],
      "default": "color-black"
    },
    {
      "type": "header",
      "content": "Text"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "heading",
      "default": "Check Us Out On Instagram"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "This is an optional Subheading"
    },
    {
      "type": "header",
      "content": "Settings"
    },
    {
      "type": "number",
      "id": "noOfPosts",
      "label": "Number of Posts",
      "default": 4
    },
    {
      "id": "instagramUrl",
      "type": "url",
      "label": "Link to Company Instagram"
    },
    {
      "id": "feedUrl",
      "type": "url",
      "label": "Link to Your Instagram Feed"
    }
  ],
  "presets": [
    {
      "name": "Instagram Feed",
      "category": "Image"
    }
  ]
}

{% endschema %}
